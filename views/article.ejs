<%- include header.ejs %>

<p>
    <% if(user.name == post.name){ %>
    <span class="edit"><a href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">edit</a></span>
    <span class="edit"><a href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">remove</a></span>
    <% } %>
</p>
<p>
    作者：<a href="/u/<%= post.name %>"><%= post.name %></a>
    时间：<%= post.time.minute %><br/>
    标签：
    <% if(post.tags){%>
    <% post.tags.forEach(function(tag, index){ %>
    <% if(tag){ %>
    <a class="tag" href="/tags/<%= tag%>"><%= tag%></a>
    <% } %>
    <% }) %>
    <% } %><br/>
</p>
<p>
    <%- post.post %>
</p>
<p class="info">
    阅读：<%= post.pv%> | 评论：<%= post.comments.length%>
</p>
<%- include comment.ejs%>
<%- include footer.ejs %>